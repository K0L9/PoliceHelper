@using static AdminLTE.MVC.Helpers.NavigationIndicatorHelper;
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link m-auto text-center" >
        @*<img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">*@
        <span class="brand-text font-weight-light">Адміністрування <br /> мережі</span>
    </a>
    <div class="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Доброго дня, &nbsp; @User.Identity.Name </a>
                </div>
            </div>
        }
        else
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Увійдіть в систему</a>
                </div>
            </div>
        }
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Головна сторінка
                        </p>
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ">
                        <a asp-controller="Employee" asp-action="Index" class="nav-link @Url.MakeActiveClass("employee","index")">
                            <i class="nav-icon fas fa-users"></i>
                            <p>
                                Робітники
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="Employee" asp-action="Index" class="nav-link">
                                    <i class="fas fa-angle-right nav-icon"></i>
                                    <i class="far fa-id-card nav-icon"></i>
                                    <p>Показати всіх</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Employee" asp-action="Upsert" class="nav-link">
                                    <i class="fas fa-angle-right nav-icon"></i>
                                    <i class="fas fa-user-plus nav-icon"></i>
                                    <p>Добавити</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Employee" asp-action="Remove" class="nav-link">
                                    <i class="fas fa-angle-right nav-icon"></i>
                                    <i class="fas fa-user-slash nav-icon"></i>
                                    <p>Видалити</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Employee" asp-action="Edit" class="nav-link">
                                    <i class="fas fa-angle-right nav-icon"></i>
                                    <i class="fas fa-user-edit nav-icon"></i>
                                    <p>Редагувати</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item ">
                        <a asp-controller="LocalCommunity" asp-action="Index" class="nav-link @Url.MakeActiveClass("localcommunity","index")">
                            <i class="nav-icon fas fa-city"></i>
                            <p>
                                Громади
                            </p>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</aside>