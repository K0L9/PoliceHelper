@model AdminLTE.Models.ViewModels.LocalCommunityVM
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<style>
    table {
        font-size: 16pt;
    }

    .lcRow button {
        color: gray;
    }

        .lcRow button:hover {
            color: black;
        }
</style>

<div class="row">
    @*<div class="row">
            <div class="col-6"></div>
            <div class="col-3">
                <a class="btn btn-success" asp-action="Add" >Добавити територіальну громаду</a>
            </div>
            <div class="col-3"></div>
        </div>*@
    <div class="col-8">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Title</th>
                    <th scope="col">Count of workers</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @{int counter = 1; }
                @foreach (var el in Model.LocalCommunities)
                {
                    using (Html.BeginForm("Remove", "LocalCommunity", new { id = el.Id }, FormMethod.Post))
                    {
                        <tr class="lcRow">
                            <th scope="row">@counter</th>
                            <td>@el.Title</td>
                            <td>@el.Employees.Count()</td>
                            <td>
                                <button type="button" class="btn btnRemove"><i class="fas fa-trash-alt"></i></button>
                                <button class="btn btnEdit"><i class="fas fa-pen"></i></button>
                                <button type="submit" class="btn btnOk d-none"><i class="far fa-check-circle"></i></button>
                                <button class="btn btnCancel d-none"><i class="far fa-times-circle"></i></button>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>

    </div>
    <div class="col-1"></div>
    <div class="col-3 sticky-top border border-dark rounded bg-white p-2">
        <form action="/LocalCommunity/Add" method="post">
            <h4>Добавлення нової територіальної громади</h4>
            <div class="col-10">
                <div class="row my-3">
                    <input asp-for="LocalCommunity.Title" class="form-control" placeholder="Назва ОТГ" name="title" />
                    <span class="text-danger" asp-validation-for="LocalCommunity.Title"></span>
                </div>

                <div class="row">
                    <input type="submit" value="Добавити" class="btn btn-success" />
                </div>
            </div>
        </form>

    </div>
</div>
<script>
    function MarkToRed(event) {
        console.log("MARK")

        var btn = event.target;
        var row = btn.closest("td").closest("tr");
        row.setAttribute("class", "lcRow bg-danger");

        row.getElementsByClassName("btnOk")[0].setAttribute("class", "btn btnOk");
        row.getElementsByClassName("btnCancel")[0].setAttribute("class", "btn btnCancel");
    }

    var btnsEdit = document.getElementsByClassName("btnEdit");
    var btnsRemove = document.getElementsByClassName("btnRemove");
    for (var i = 0; i < btnsEdit.length; i++) {
        btnsRemove[i].addEventListener("click", MarkToRed)

    }


